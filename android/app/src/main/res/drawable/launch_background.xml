<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color that matches the Qwiken logo background -->
    <item android:drawable="@color/splash_background" />
    
    <!-- Centered logo with generous padding (40% of screen width for good visual balance) -->
    <item
        android:width="160dp"
        android:height="160dp"
        android:gravity="center"
        android:top="64dp"
        android:bottom="64dp"
        android:left="64dp"
        android:right="64dp">
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash" />
    </item>
</layer-list>